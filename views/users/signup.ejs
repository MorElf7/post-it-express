<% layout('layouts/boilerplate') %> 
<div class="container">
    <div class="row mt-3">
        <div class="col-md-4 offset-4">
            <div class="card px-3 py-3 border-success">
                <div class="card-title mb-3 text-center">
                    <h2>Sign Up</h2>
                </div>
                
                <div class="card-body">
                    <form action="/users" method="POST" class="needs-validation" novalidate>
                        <div class="form-floating mb-3">
                            <input class="form-control" type="text" id="username" name="user[username]" placeholder="Username" required>
                            <label for="username" class="form-label">Username</label>
                            <div class="invalid-feedback">
                                Please provide an username.
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" name="user[email]" id="email" type="email" placeholder="Email" required></input>
                            <label for="email" class="form-label">Email</label>
                            <div class="invalid-feedback">
                                Please provide an email.
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" name="user[password]" id="password" type="password" placeholder="Password" required></input>
                            <label for="password" class="form-label">Password</label>
                            <div class="invalid-feedback">
                                Please provide a password.
                            </div>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success">Join</button>
                            <a href="/"><button type="button" class="btn btn-secondary">Cancel</button></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
</div>