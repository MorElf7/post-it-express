<% layout('layouts/boilerplate') %> 
<div class="container">
    <div class="row mt-3">
        <div class="col-md-6 offset-2">
            <div class="">
                <h3 class="mb-3">New Post</h3>
            </div>
            
            <div>
                <form action="/<%= currentUser._id %>/posts" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input class="form-control" type="text" id="title" name="post[title]" required>
                        <div class="invalid-feedback">
                            Please provide a title.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input class="form-control" type="file" id="image" name="image">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" name="post[description]" id="description"rows="5" required></textarea>
                        <div class="invalid-feedback">
                            Please provide a description.
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Post</button>
                        <a href="/<%= currentUser._id %>"><button type="button" class="btn btn-secondary">Cancel</button></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
